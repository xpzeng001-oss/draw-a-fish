.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #f0f4f8;
  overflow: hidden;
}

/* 提示栏 */
.tip-bar {
  padding: 16rpx 30rpx;
  background: linear-gradient(135deg, #1a5276, #2980b9);
  text-align: center;
}

.tip-text {
  font-size: 26rpx;
  color: rgba(255,255,255,0.9);
  letter-spacing: 1rpx;
}

/* 画布 */
.canvas-wrapper {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx 20rpx;
  position: relative;
}

.canvas-bg {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  background: #fff;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.1);
  position: relative;
}

.grid-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 1;
  background-image: 
    linear-gradient(rgba(52,152,219,0.06) 1px, transparent 1px),
    linear-gradient(90deg, rgba(52,152,219,0.06) 1px, transparent 1px);
  background-size: 40rpx 40rpx;
}

.draw-canvas {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 2;
}

.direction-hint {
  position: absolute;
  bottom: 24rpx;
  right: 36rpx;
  background: rgba(52,152,219,0.15);
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  z-index: 5;
}

.direction-hint text {
  font-size: 22rpx;
  color: #3498db;
}

/* 颜色选择器 */
.color-picker {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding: 14rpx 20rpx;
  gap: 12rpx;
  background: #fff;
  border-top: 1rpx solid #e8edf2;
}

.color-item {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  border: 3rpx solid #e0e0e0;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.15s;
  position: relative;
}

.color-item.active {
  border-color: #333;
  border-width: 4rpx;
  transform: scale(1.15);
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.2);
}

.color-check {
  color: #fff;
  font-size: 22rpx;
  font-weight: bold;
  text-shadow: 0 1rpx 2rpx rgba(0,0,0,0.5);
}

/* 工具栏 */
.toolbar {
  background: #fff;
  padding: 14rpx 24rpx;
  border-top: 1rpx solid #e8edf2;
}

.tool-group {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.tool-section {
  display: flex;
  align-items: center;
  gap: 14rpx;
}

.tool-label {
  font-size: 22rpx;
  color: #7f8c8d;
  margin-right: 4rpx;
}

.size-options {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.size-dot {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f6fa;
  border: 2rpx solid transparent;
  transition: all 0.15s;
}

.size-dot.active {
  border-color: #3498db;
  background: #ebf5fb;
}

.dot-inner {
  border-radius: 50%;
  background: #2c3e50;
}

.tool-buttons {
  display: flex;
  gap: 12rpx;
}

.tool-btn {
  padding: 10rpx 22rpx;
  border-radius: 12rpx;
  background: #f5f6fa;
  border: 1rpx solid #e0e4e8;
  transition: all 0.15s;
}

.tool-btn.active {
  background: #3498db;
  border-color: #2980b9;
}

.tool-btn.active text {
  color: #fff;
}

.tool-btn.danger {
  background: #ffeaea;
  border-color: #ffcccc;
}

.tool-btn.danger text {
  color: #e74c3c;
}

.tool-btn text {
  font-size: 24rpx;
  color: #555;
}

/* 提交按钮 */
.submit-bar {
  padding: 16rpx 30rpx 40rpx;
  background: #fff;
  display: flex;
  gap: 20rpx;
}

.btn-my-fish {
  height: 88rpx;
  padding: 0 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #3498db, #2980b9);
  border-radius: 44rpx;
  transition: all 0.2s;
  flex-shrink: 0;
}

.btn-my-fish:active {
  transform: scale(0.97);
}

.btn-my-fish text {
  font-size: 28rpx;
  color: #fff;
  font-weight: 600;
  white-space: nowrap;
}

.btn-submit {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #3498db, #2980b9);
  border-radius: 44rpx;
  box-shadow: 0 6rpx 24rpx rgba(52,152,219,0.4);
  transition: all 0.2s;
}

.btn-submit:active {
  transform: scale(0.97);
}

.btn-submit.disabled {
  background: linear-gradient(135deg, #bdc3c7, #95a5a6);
  box-shadow: none;
}

.btn-submit text {
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
  letter-spacing: 2rpx;
}

/* 评分弹窗 */
.score-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.score-card {
  width: 580rpx;
  background: #fff;
  border-radius: 32rpx;
  padding: 50rpx 40rpx;
  text-align: center;
  animation: popIn 0.3s ease-out;
}

@keyframes popIn {
  0% { transform: scale(0.8); opacity: 0; }
  100% { transform: scale(1); opacity: 1; }
}

.fish-preview-wrap {
  width: 300rpx;
  height: 200rpx;
  margin: 0 auto 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f9fa;
  border-radius: 16rpx;
}

.fish-preview {
  width: 100%;
  height: 100%;
}

.score-value {
  font-size: 72rpx;
  font-weight: 800;
  margin-bottom: 12rpx;
}

.score-comment {
  font-size: 28rpx;
  color: #7f8c8d;
  margin-bottom: 30rpx;
  line-height: 1.5;
}

.fish-name-input {
  width: 400rpx;
  height: 76rpx;
  border: 2rpx solid #e0e4e8;
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  text-align: center;
  margin: 0 auto 30rpx;
  color: #333;
}

.score-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.btn-action {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  font-size: 30rpx;
  border: 2rpx solid #e0e4e8;
  color: #555;
}

.btn-action.primary {
  background: linear-gradient(135deg, #3498db, #2980b9);
  border: none;
  color: #fff;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(52,152,219,0.3);
}

.btn-action.primary text {
  color: #fff;
}
