.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #0c2d48 0%, #1a5276 100%);
}

/* 统计面板 */
.stats-panel {
  display: flex;
  justify-content: space-around;
  padding: 30rpx 20rpx;
  margin: 20rpx 24rpx;
  background: rgba(255,255,255,0.08);
  border-radius: 24rpx;
  backdrop-filter: blur(10px);
  border: 1rpx solid rgba(255,255,255,0.1);
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-value {
  font-size: 48rpx;
  font-weight: 800;
  color: #fff;
}

.stat-label {
  font-size: 22rpx;
  color: rgba(255,255,255,0.5);
  margin-top: 4rpx;
}

/* 鱼列表 */
.fish-list {
  flex: 1;
  padding: 0 24rpx;
}

.fish-card {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  margin-bottom: 16rpx;
  background: rgba(255,255,255,0.08);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255,255,255,0.06);
  position: relative;
}

.rank-badge {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  background: rgba(255,255,255,0.1);
  flex-shrink: 0;
}

.rank-badge text {
  font-size: 26rpx;
  color: rgba(255,255,255,0.6);
}

.rank-1 {
  background: linear-gradient(135deg, #f1c40f, #e67e22);
}
.rank-1 text { font-size: 32rpx; }

.rank-2 {
  background: linear-gradient(135deg, #bdc3c7, #95a5a6);
}
.rank-2 text { font-size: 32rpx; }

.rank-3 {
  background: linear-gradient(135deg, #e67e22, #d35400);
}
.rank-3 text { font-size: 32rpx; }

.fish-preview {
  width: 100rpx;
  height: 70rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  overflow: hidden;
  background: rgba(255,255,255,0.05);
}

.preview-canvas {
  width: 100%;
  height: 100%;
}

.fish-info {
  flex: 1;
  min-width: 0;
}

.fish-name {
  font-size: 30rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fish-meta {
  display: flex;
  align-items: center;
}

.fish-time {
  font-size: 22rpx;
  color: rgba(255,255,255,0.4);
}

.fish-score {
  display: flex;
  align-items: baseline;
  margin-left: 12rpx;
  flex-shrink: 0;
}

.score-num {
  font-size: 40rpx;
  font-weight: 800;
}

.score-unit {
  font-size: 22rpx;
  margin-left: 4rpx;
  opacity: 0.7;
}

.delete-btn {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0.3;
}

.delete-btn text {
  font-size: 28rpx;
  color: #fff;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: rgba(255,255,255,0.6);
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: rgba(255,255,255,0.3);
}

/* 列表底部 */
.list-footer {
  text-align: center;
  padding: 30rpx 0 20rpx;
}

.list-footer text {
  font-size: 22rpx;
  color: rgba(255,255,255,0.3);
}

/* 底部操作 */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx 50rpx;
}

.btn-back, .btn-draw {
  flex: 1;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 42rpx;
  font-size: 28rpx;
}

.btn-back {
  background: rgba(255,255,255,0.1);
  border: 1rpx solid rgba(255,255,255,0.2);
}

.btn-back text {
  color: #fff;
}

.btn-draw {
  background: linear-gradient(135deg, #3498db, #2980b9);
  box-shadow: 0 4rpx 20rpx rgba(52,152,219,0.4);
}

.btn-draw text {
  color: #fff;
  font-weight: 600;
}
