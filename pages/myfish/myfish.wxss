.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #0c2d48 0%, #1a5276 100%);
}

.fish-list {
  flex: 1;
}

.fish-list-inner {
  padding: 20rpx 24rpx;
}

.fish-card {
  display: flex;
  align-items: center;
  padding: 20rpx 24rpx;
  margin-bottom: 16rpx;
  background: rgba(255,255,255,0.08);
  border-radius: 20rpx;
  border: 1rpx solid rgba(255,255,255,0.06);
}

.fish-preview {
  width: 120rpx;
  height: 90rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  border-radius: 12rpx;
  overflow: hidden;
  background: rgba(255,255,255,0.05);
}

.preview-image {
  width: 100%;
  height: 100%;
}

.fish-info {
  flex: 1;
  min-width: 0;
}

.fish-name {
  font-size: 30rpx;
  color: #fff;
  font-weight: 600;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.fish-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.fish-time {
  font-size: 22rpx;
  color: rgba(255,255,255,0.4);
}

.fish-pet {
  font-size: 22rpx;
  color: rgba(46,204,113,0.7);
}

.delete-btn {
  padding: 10rpx 24rpx;
  border-radius: 24rpx;
  background: rgba(255,255,255,0.08);
  flex-shrink: 0;
}

.delete-btn text {
  font-size: 24rpx;
  color: rgba(255,255,255,0.5);
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 32rpx;
  color: rgba(255,255,255,0.6);
  margin-bottom: 10rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: rgba(255,255,255,0.3);
}

/* 底部操作 */
.bottom-actions {
  display: flex;
  gap: 20rpx;
  padding: 20rpx 30rpx 50rpx;
}

.btn-back, .btn-draw {
  flex: 1;
  height: 84rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 42rpx;
  font-size: 28rpx;
}

.btn-back {
  background: rgba(255,255,255,0.1);
  border: 1rpx solid rgba(255,255,255,0.2);
}

.btn-back text {
  color: #fff;
}

.btn-draw {
  background: linear-gradient(135deg, #3498db, #2980b9);
  box-shadow: 0 4rpx 20rpx rgba(52,152,219,0.4);
}

.btn-draw text {
  color: #fff;
  font-weight: 600;
}
